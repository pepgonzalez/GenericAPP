<Configure id="dataSources" class="org.mortbay.jetty.webapp.WebAppContext">
	<New id="genericDataSource" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg>jdbc/genericDataSource</Arg>
		<Arg>
			<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
	 				<Set name="Url">jdbc:mysql://localhost:3306/generic</Set>
				<Set name="User">generic</Set>
				<Set name="Password">generic</Set>
			</New>
		</Arg>
	</New>
</Configure>