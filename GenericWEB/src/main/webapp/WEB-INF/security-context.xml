<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<security:http use-expressions="true">

		<!-- solo los usuario con el rol ROLE_ADMIN, pueden ver todo lo relacionado 
			a /auth/* -->
		<security:intercept-url pattern="/auth/**" access="hasRole('ROLE_ADMIN')" />
		<security:form-login default-target-url="/auth/" />
		<security:access-denied-handler error-page="/403" />
		
	</security:http>


	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="pepe" authorities="ROLE_ADMIN" password="1234" />
				<security:user name="juan" authorities="ROLE_USER" password="1234" />
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
